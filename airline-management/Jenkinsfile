pipeline {
    agent any

    environment {
        AWS_EC2_KEY = credentials('ec2-key') // Use your Jenkins credential ID
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/123harshitaagrawal/airline-management', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                script {
                    docker.image('maven:3.8.6-eclipse-temurin-17').inside {
                        bat 'mvn clean package'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Add actual test commands here, e.g.:
                // bat 'mvn test'
            }
        }

        stage('Deploy to EC2') {
            steps {
                echo 'Deploying to EC2...'
                // Add your SCP/SSH deploy commands here
            }
        }

        stage('Start Application') {
            steps {
                echo 'Starting application on EC2...'
                // Add SSH commands to start your app, e.g. via systemctl or nohup
            }
        }
    }

    post {
        always {
            cleanWs()
            echo 'Pipeline completed.'
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
